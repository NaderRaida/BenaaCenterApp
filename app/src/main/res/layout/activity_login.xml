<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40cbf8"
    android:orientation="vertical"
    tools:context="com.goldcode.naderwalid.benaapp.Activities.LoginActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="تسجيل الدخول"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#1e1548"
        android:textSize="30sp" />

    <TextView

        android:id="@+id/mobile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_title"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="79dp"
        android:backgroundTint="#000000"
        android:backgroundTintMode="src_over"
        android:text="رقم الجوال :"
        android:textColor="#1e1548"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_txt_mobile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mobile_txt"
        android:layout_alignBottom="@+id/mobile_txt"
        android:layout_marginRight="22dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@+id/mobile_txt"
        android:backgroundTint="#de5b7b"
        android:hint="@string/mobile_hint"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"


        />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_txt_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/custom_btn_login"
        android:text="دخول"
        android:textColor="#1e1548"
        android:textSize="27sp" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:orientation="horizontal"
        android:paddingStart="30dp">

        <View
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginTop="43dp"
            android:background="@drawable/custom_divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="35dp"
            android:text="أو" />

        <View
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/custom_divider"
            android:text="   " />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn_signup"
        android:text=" تسجيل عضوية"
        android:textColor="#1e1548"
        android:textSize="27sp" />

</RelativeLayout>
